{
  "name": "multi-business-platform",
  "version": "1.0.0",
  "description": "A comprehensive multi-business platform with hotels, ecommerce, weddings, and automobiles modules",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run start:server",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnqayush/starter.git"
  },
  "keywords": [
    "monorepo",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "hotels",
    "ecommerce",
    "weddings",
    "automobiles"
  ],
  "author": "rnqayush",
  "license": "MIT"
}

